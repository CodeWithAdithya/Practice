    }
    static boolean ISBN(int number)
    {
      String strNum = Integer.toString(number);
      int digitCount = strNum.length();
      if (digitCount!=10)
      {
          return false;
      }
      int[] digitArray = new int[10];
        for (int i = 0; i < 10 ; i++)
        {
         if (number>0)
         {
             digitArray[i] = number%10;
             number=number/10;
         }
        }
        int result=0;
        for (int i = 0; i <10; i++)
        {
            result =  result + digitArray[i]*(i+1);
        }
        return result%11==0;
    }
}
