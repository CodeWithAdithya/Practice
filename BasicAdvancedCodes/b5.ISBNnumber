    static boolean ISBN(int num)
    {
     String strNum = Integer.toString(num);
     int digitCount = strNum.length();
     if (digitCount!=10)
     {
         return false;
     }
     char[] ch = strNum.toCharArray();
     int sum=0;
     int mul = 10;
        for (int i = 0; i <ch.length; i++)
        {
         sum = sum + (ch[i]-'0') * mul;
         mul = mul-1;
        }
        return sum%11==0?true:false;
    }
}
